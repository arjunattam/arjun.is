<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    {# <link rel="stylesheet" href="{{ '/css/index.css' | url }}"> #}
    <link rel="stylesheet" href="{{ '/css/index2.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-76439340-1"></script>
    <script>window.dataLayer = window.dataLayer || []; function gtag(){dataLayer.push(arguments);} gtag('js', new Date()); gtag('config', 'UA-76439340-1');</script>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Lora|Inter&display=swap" rel="stylesheet">
  </head>
  <body>

    <div class="page-bg">
      <div class="page">

        <header>
          <div class="spacer">&nbsp;</div>
          <h1 class="home"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
        </header>

        <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
          <aside id="sidebar">
            {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
            <nav>
              <ul>
              {%- for entry in collections.all | eleventyNavigation %}
                <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
              {%- endfor %}
              </ul>
            </nav>
            <h3>{{ metadata.description }}</h3>
          </aside>

          <article class="content">
            {{ content | safe }}
          </article>
        </main>
      </div>
    </div>

    <footer>
      <div class="footer">
        <div class="spacer">&nbsp;</div>
        <span>This is the footer.</span>
      </div>
    </footer>

    {# Current page: {{ page.url | url }} #}
  </body>
</html>
